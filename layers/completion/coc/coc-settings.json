{
  "suggest.triggerAfterInsertEnter": false,
  "suggest.noselect": true,
  "suggest.timeout": 1000,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.snippetIndicator": "â–º",
  "suggest.minTriggerInputLength": 1,
  "codeLens.enable": false,
  "diagnostic.enable": false,
  "coc.source.word.filetypes": ["markdown", "latex"],
  "coc.source.emoji.filetypes": ["markdown"],
  "coc.source.neoinclude.filetypes": ["c", "cpp"],
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "yank.enableCompletion": false,
  "python.jediEnabled": false,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp", "cuda"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "template.templatesDirectory": "~/.space-vim/templates"
}
