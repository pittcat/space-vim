# vimspector config file snippets

snippet chromeadebug "Chrome Attach(Debug)"
"${1:attach}": {
	"adapter": "chrome",
	"configuration": {
		"request": "attach",
		"url": "${2:http://localhost:1234/}",
		"port": 9222,
		"webRoot": "${workspaceRoot}/www"
	}
}
endsnippet

snippet chromeldebug "Chrome Launch(Debug)"
"${1:launch}": {
	"adapter": "chrome",
	"configuration": {
		"request": "launch",
		"url": "${2:http://localhost:1234/}",
		"runtimeExecutable": "${3:/bin/chromium}",
		"webRoot": "${workspaceRoot}/www"
	}
}
endsnippet

snippet chromefdebug "Chrome File(Debug)"
"${1:index.html}": {
	"adapter": "chrome",
	"configuration": {
		"request": "launch",
		"runtimeExecutable": "${3:/bin/chromium}",
		"url": "${2:http://localhost:1234/}",
		"file": "${workspaceFolder}/${3:index.html}"
	}
}
endsnippet

snippet pyldebug "Python Launch(Debug)"
"${1:<name>}: Launch": {
	"adapter": "debugpy",
	"configuration": {
		"name": "<name>: Launch",
		"type": "python",
		"request": "launch",
		"cwd": "<working directory>",
		"python": "${2:/bin/python}",
		"stopOnEntry": true,
		"console": "externalTerminal",
		"debugOptions": [],
		"program": "${3:<path to main python file>}"
	}
}
endsnippet

snippet pylvsdebug "Python Launch(Debug)"
"${1:<name>}: Launch": {
	"adapter": "vscode-python",
	"configuration": {
